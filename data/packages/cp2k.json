        },
        {
            "name": "cuda_fft",
            "default": false,
            "description": "Use CUDA also for FFTs in the PW part of CP2K"
        },
        {
            "name": "cuda_blas",
            "default": false,
            "description": "Use CUBLAS for general matrix operations in DBCSR"
        },
        {
            "name": "lmax",
            "default": "5",
            "description": "Maximum supported angular momentum (HFX and others)"
        }
